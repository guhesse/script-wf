{
  "type": "module",
  "name": "workfront-sharing-ui",
  "version": "1.0.0",
  "description": "Interface visual para compartilhamento de documentos no Workfront",
  "main": "server.js",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "playwright": "^1.55.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "login": "node wf_share_const.js --login",
    "share": "node wf_share_const.js --share",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:preview": "cd frontend && npm run preview",
    "dev:all": "concurrently \"npm run dev\" \"npm run frontend:dev\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "nodemon server.js",
    "build": "npm run frontend:build",
    "build:frontend": "cd frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
