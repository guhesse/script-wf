# Dockerfile otimizado para desenvolvimento
FROM node:18-slim AS development

WORKDIR /app

# Instalar dependências do sistema para Playwright
RUN apt-get update && apt-get install -y \
    build-essential python3 make g++ pkg-config \
    ca-certificates \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libcups2 \
    libdbus-1-3 \
    libdrm2 \
    libgbm1 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxkbcommon0 \
    libxrandr2 \
    && rm -rf /var/lib/apt/lists/*

# Copiar package.json e instalar dependências
COPY package*.json ./
# Instalar dependências do projeto
RUN npm ci --legacy-peer-deps \
 && npm rebuild bcrypt --build-from-source || true

# Instalar Playwright
RUN npx playwright install chromium --with-deps

# Copiar Prisma schema e gerar client
COPY prisma ./prisma
RUN npx prisma generate

# Copiar código fonte
COPY . .

# Criar diretórios necessários
RUN mkdir -p /app/temp /app/uploads /app/state

EXPOSE 3000

# Comando para desenvolvimento com hot reload
CMD ["npm", "run", "start:dev"]